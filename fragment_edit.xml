<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Update"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#242323"
                android:text="Update"
                android:textColor="#042FF4"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/Username"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Updatepro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#242323"
                android:text="Update"
                android:textColor="#042FF4"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView24"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Updateemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#242323"
                android:text="Update"
                android:textColor="#042FF4"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/emailtext"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/Updatename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#242323"
                android:text="Update"
                android:textColor="#042FF4"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/bio"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/profesiontext"

                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                android:background="@drawable/corner"

                app:layout_constraintEnd_toStartOf="@+id/Updatepro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailtext" />

            <EditText
                android:id="@+id/nametext"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/Updatename"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/biotext"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/Update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />

            <EditText
                android:id="@+id/emailtex"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/Updateemail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bio" />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="Emailid"
                android:textColor="#090808"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailtex" />

            <TextView
                android:id="@+id/Username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="Paste bio detail"
                android:textColor="#040303"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/biotext" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Edit Profile"
                android:textColor="#060505"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Name"
                android:textColor="#060505"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nametext" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="Profession"
                android:textColor="#030202"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profesiontext" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/linkdinurl"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/updateL"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Username" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="facebook"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/facebookurl" />


            <TextView
                android:id="@+id/updatet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/red"
                app:layout_constraintBottom_toTopOf="@+id/tweeterurlj"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/updateL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/red"
                app:layout_constraintBottom_toTopOf="@+id/textView51"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/updatef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/red"
                app:layout_constraintBottom_toTopOf="@+id/textView43"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Linkdin"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linkdinurl" />

            <EditText
                android:id="@+id/facebookurl"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/updatef"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linkdinurl" />

            <TextView
                android:id="@+id/updatei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textColor="@color/red"
                app:layout_constraintBottom_toTopOf="@+id/instagramurlh"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/tweeterurl"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/updatet"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

            <EditText
                android:id="@+id/instagramurl"
                android:layout_width="0dp"
                android:layout_height="40sp"

                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/corner"
                android:ems="10"
                android:gravity="top"
                android:inputType="textPersonName"
                android:textColor="@color/blackk"
                android:textSize="16sp"
                app:backgroundTint="#3E979393"
                app:layout_constraintEnd_toStartOf="@+id/updatei"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tweeterurlj" />

            <TextView
                android:id="@+id/tweeterurlj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="tweeter"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tweeterurl" />

            <TextView
                android:id="@+id/instagramurlh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="instagram"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/instagramurl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>